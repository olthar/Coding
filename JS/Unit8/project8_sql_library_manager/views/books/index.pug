extends ../layout

block content
  div.subheader
    p
      a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th.year Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}/edit`) #{book.title}
            td #{book.author}
            td #{book.genre}
            td.year #{book.year}
          tr